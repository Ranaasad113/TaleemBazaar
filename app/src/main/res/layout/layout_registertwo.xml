<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:background="#ffffff">
        <TextView android:layout_width="match_parent"
            android:id="@+id/have_an_account_textview"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="16dp"
            android:text="Have an account? Sign In "
            android:textColor="@color/colorblack"
            android:textSize="@dimen/text_size"
            />
        <TextView android:layout_width="match_parent"
            android:id="@+id/only_for_setting"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorblack"
            android:textSize="@dimen/text_size"

            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearlayout_for_sign_in"
            android:weightSum="1"
            android:layout_above="@+id/have_an_account_textview"
            android:layout_below="@+id/only_for_setting"
            android:gravity="center"


            >






            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingTop="@dimen/margin_top"
                android:layout_marginLeft="@dimen/left_right_margin_edittext"
                android:layout_marginRight="@dimen/left_right_margin_edittext"
                android:textColorHint="@color/edittext_hnt_color"
                app:passwordToggleEnabled="true"


                >
                <android.support.design.widget.TextInputEditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:hint="Password"
                    android:id="@+id/password_register_edittext"
                    android:textSize="@dimen/text_size"

                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingTop="@dimen/margin_top"
                android:layout_marginLeft="@dimen/left_right_margin_edittext"
                android:layout_marginRight="@dimen/left_right_margin_edittext"
                android:textColorHint="@color/edittext_hnt_color"
                app:passwordToggleEnabled="true"


                >
                <android.support.design.widget.TextInputEditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:hint="Confirm Password"
                    android:id="@+id/cnfrm"
                    android:textSize="@dimen/text_size"

                    />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/register_btn_for_register"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_marginLeft="@dimen/left_right_margin_edittext"
                android:layout_marginRight="@dimen/left_right_margin_edittext"
                android:background="@drawable/my_react"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:text="Register"
                android:textSize="@dimen/text_size"
                android:elevation="4dp"
                android:textColor="#FFEBEE"/>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>