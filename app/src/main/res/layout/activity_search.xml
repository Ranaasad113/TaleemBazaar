<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.asad.taleembazar.activities.SearchActivity">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_right_margin_edittext"
        android:layout_marginRight="@dimen/left_right_margin_edittext"
        android:paddingTop="@dimen/margin_top"
        android:textColorHint="@color/edittext_hnt_color"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText

            android:id="@+id/searchedittxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Search"
            android:inputType="textPassword"
            android:password="true"
            android:textSize="@dimen/text_size"

            />
    </android.support.design.widget.TextInputLayout>

    <Button

        android:id="@+id/searchbtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/left_right_margin_edittext"
        android:layout_marginRight="@dimen/left_right_margin_edittext"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@drawable/my_react"
        android:elevation="4dp"
        android:text="Search"
        android:textColor="#FFEBEE"
        android:textSize="@dimen/text_size" />

</LinearLayout>
