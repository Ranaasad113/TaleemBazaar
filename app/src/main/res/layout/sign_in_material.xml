<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:id="@+id/containeroffragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        >
        <TextView android:layout_width="match_parent"
            android:id="@+id/only_for_setting"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorblack"
            android:textSize="@dimen/text_size"

            />
        <TextView android:layout_width="match_parent"
            android:id="@+id/no_account_register_textview"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="16dp"
            android:text="No Account | Register"
            android:textColor="@color/colorblack"
            android:textSize="@dimen/text_size"


             />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearlayout_for_sign_in"
            android:weightSum="1"
            android:layout_above="@+id/no_account_register_textview"
            android:layout_below="@+id/only_for_setting"
            android:gravity="center"


            >

            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/left_right_margin_edittext"
                android:layout_marginLeft="@dimen/left_right_margin_edittext"
                android:textColorHint="@color/edittext_hnt_color"


                >
                <android.support.design.widget.TextInputEditText


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:textSize="@dimen/text_size"
                    android:hint="Email"
                    android:id="@+id/emailadress"


                    />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingTop="@dimen/margin_top"
                android:layout_marginLeft="@dimen/left_right_margin_edittext"
                android:layout_marginRight="@dimen/left_right_margin_edittext"
                android:textColorHint="@color/edittext_hnt_color"
                app:passwordToggleEnabled="true"
                >
                <android.support.design.widget.TextInputEditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:password="true"
                    android:ems="10"
                    android:hint="Password"
                    android:id="@+id/editText3"
                    android:textSize="@dimen/text_size"

                    />
            </android.support.design.widget.TextInputLayout>

                <Button

                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_marginLeft="@dimen/left_right_margin_edittext"
                    android:layout_marginRight="@dimen/left_right_margin_edittext"
                    android:background="@drawable/my_react"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:text="Sign In"
                    android:textSize="@dimen/text_size"
                    android:elevation="4dp"
                    android:textColor="#FFEBEE"/>
            >
                <TextView android:layout_width="match_parent"
                    android:id="@+id/forget_password_textview_1"
                    android:layout_height="wrap_content"
                    android:text="@string/forget_password"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/text_size"
                    android:layout_marginTop="@dimen/margin_top"
                    android:gravity="end"
                    android:layout_marginRight="@dimen/left_right_margin_edittext"
                    android:layout_marginLeft="@dimen/left_right_margin_edittext"

                    />

        </LinearLayout>
    </RelativeLayout>
    </ScrollView>