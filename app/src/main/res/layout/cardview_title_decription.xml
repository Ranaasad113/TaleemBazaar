<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cardview_for_submitadd_camera_and_galleray"
    android:background="@color/colorPrimary"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="4dp"
    card_view:cardMaxElevation="6dp"
    card_view:contentPadding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/left_right_margin_edittext"
        android:layout_marginLeft="@dimen/left_right_margin_edittext"
        android:textColorHint="@color/edittext_hnt_color"
        >
        <android.support.design.widget.TextInputEditText


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:textSize="@dimen/text_size"
            android:hint="Title"
            android:maxLength="70"
            android:id="@+id/textinputedittext_title"
            />
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0/70"
        android:clickable="true"
        android:id="@+id/textview_for_count_title_letters"
        android:gravity="end"
        android:layout_marginRight="@dimen/left_right_margin_edittext"
         />
    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/left_right_margin_edittext"
        android:layout_marginLeft="@dimen/left_right_margin_edittext"
        android:textColorHint="@color/edittext_hnt_color"


        >
        <android.support.design.widget.TextInputEditText


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:textSize="@dimen/text_size"
            android:hint="Descrpition"
            android:maxLength="4096"
            android:id="@+id/textinputedittext_descrpition"
            />

    </android.support.design.widget.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0/4096"
        android:clickable="true"
        android:id="@+id/textview_count_descrption_letters"
        android:gravity="end"
        android:layout_marginRight="@dimen/left_right_margin_edittext"
        android:layout_marginBottom="20dp"
        />
</LinearLayout>
    </android.support.v7.widget.CardView>